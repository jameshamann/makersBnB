extends layout

block content

  body
    h1 Sign In
    form(action='/users/sign-in-submit', method='post')
      div
        label(for='email') Email:
          input(type='email', name='email')
      div
        label(for='password') Password:
          input(type='password', name='password')
      div
        input(type='submit', value='Sign In')
